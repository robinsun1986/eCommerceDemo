<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:buttonStyle">@style/DefaultButtonStyle</item>
        <item name="android:alertDialogTheme">@style/AlertDialogStyle</item>
        <item name="android:textViewStyle">@style/DefaultTextViewStyle</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="DefaultButtonStyle" parent="@android:style/Widget.Button">
        <item name="fontPath">fonts/SanFranciscoDisplayRegular.ttf</item>
        <item name="android:background">@null</item>
    </style>

    <style name="DefaultTextViewStyle" parent="@android:style/Widget.TextView">
        <item name="fontPath">fonts/SanFranciscoDisplayRegular.ttf</item>
        <item name="android:textColor">@color/textDarkBlack</item>
    </style>

    <style name="DialogWindowTitleAppearance" parent="@android:style/TextAppearance.Holo.DialogWindowTitle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="DialogWindowTitle">
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/DialogWindowTitleAppearance</item>
    </style>

    <style name="AlertDialogStyle" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@style/DialogWindowTitle</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BoldTextViewStyle" parent="@style/DefaultTextViewStyle">
        <item name="fontPath">fonts/SanFranciscoDisplayBold.ttf</item>
    </style>
</resources>
